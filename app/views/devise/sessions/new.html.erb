<div class="page-header">
  <h1><%= t('devise.login') %></h1>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal denser'}) do |form| %>

  <div class="fieldset">

    <div class="form-group control-group">
      <%= form.label :email, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.text_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :password, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.password_field :password, autocomplete: 'current-password', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :remember_me, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.check_box :remember_me, class: 'check-box' %>
      </div>
    </div>

    <div class="form-group control-group">
      <div class=' col-sm-2'></div>
      <div class=' col-sm-10'>
        <%= form.submit t('devise.login'), class: 'btn btn-primary btn-save' %>

        <br>
        <br>
        <%= render 'devise/shared/links' %>
      </div>
    </div>

  </div>

<% end %>
