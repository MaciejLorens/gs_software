<div class='well'>

  <%= form_tag(products_path, method: :get) do %>

    <div class="filter-field form-inline">

      <%= text_field_tag :f_name,
                         params[:f_name],
                         placeholder: 'All Names',
                         class: 'form-control filter' %>

      <%= text_field_tag :f_number,
                         params[:f_number],
                         placeholder: 'All Numbers',
                         class: 'form-control filter' %>

      <%= link_to fa_icon('times'), products_path, class: 'btn btn-info pull-right' %>

      <%= button_tag :submit, class: 'btn btn-primary pull-right' do %>
        <%= fa_icon('retweet', text: 'Refresh') %>
      <% end %>

    </div>

  <% end %>

</div>
