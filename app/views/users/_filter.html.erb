<div class='well'>

  <%= form_tag(users_path, method: :get, class: 'filter-form') do %>

    <div class="filter-field form-inline">

      <%= hidden_field_tag :s_field, params[:s_field] %>
      <%= hidden_field_tag :s_order, params[:s_order] %>

      <%= text_field_tag :f_email,
                         params[:f_email],
                         placeholder: 'All Emails',
                         class: 'form-control filter' %>

      <%= text_field_tag :f_first_name,
                         params[:f_first_name],
                         placeholder: 'All First Names',
                         class: 'form-control filter' %>

      <%= text_field_tag :f_last_name,
                         params[:f_last_name],
                         placeholder: 'All Last Names',
                         class: 'form-control filter' %>

      <%= link_to fa_icon('times'), users_path(s_field: :created_at, s_order: :desc), class: 'btn btn-info pull-right' %>

      <%= button_tag :submit, class: 'btn btn-primary pull-right' do %>
        <%= fa_icon('retweet', text: 'Refresh') %>
      <% end %>

    </div>

  <% end %>

</div>
