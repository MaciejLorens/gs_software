<div class="page-header">
  <h1>List of Drivers</h1>
</div>

<%= render partial: 'nav_tabs' %>

<%= render partial: 'filter' %>

<% if @drivers.empty? %>
  <p> - no results found - </p>
<% else %>

  <div class="col-sm-6 without-padding">
    <table class="table table-condensed table-striped">
      <thead>
      <tr>
        <th></th>
        <th>
          <%= link_to 'First Name', '#',
                      'data-field' => 'first_name',
                      class: "sort-link #{sort_class('first_name')}" %>
        </th>
        <th>
          <%= link_to 'Last Name', '#',
                      'data-field' => 'last_name',
                      class: "sort-link #{sort_class('last_name')}" %>
        </th>
        <th>
          <%= link_to 'Edited at', '#',
                      'data-field' => 'updated_at',
                      class: "sort-link #{sort_class('updated_at')}" %>
        </th>
        <th>
          <%= link_to 'Created at', '#',
                      'data-field' => 'created_at',
                      class: "sort-link #{sort_class('created_at')}" %>
        </th>
        <th>Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @drivers.each do |driver| %>
        <tr>
          <td><%= check_box_tag 'select', 'yes', false, class: 'list-checkbox', 'data-id' => driver.id %></td>
          <td><%= driver.first_name %></td>
          <td><%= driver.last_name %></td>
          <td><%= date_format(driver.updated_at) %></td>
          <td><%= date_format(driver.created_at) %></td>
          <td class="action-links">
            <%= link_to fa_icon('pencil', text: 'Edit'), edit_driver_path(driver), class: 'action-link' %>
            <%= link_to fa_icon('times', text: 'Delete'), driver, method: :delete, data: { confirm: 'Are you sure?' }, class: 'action-link' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

<% end %>
