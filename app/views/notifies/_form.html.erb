<%= form_with(model: notify, local: true, class: 'form-horizontal denser col-sm-12') do |form| %>

  <div class="fieldset">
    <% if notify.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(notify.errors.count, t('common.errors')) %>
          <%= t('notify.errors.prohibited') %>
        </h2>

        <ul>
          <% notify.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <% if controller.action_name == 'edit' %>
      <div class="form-group control-group">
        <%= form.label :number, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10 controls">
          <%= form.text_field :number, class: 'form-control' %>
        </div>
      </div>
    <% end %>

    <div class="form-group control-group">
      <%= form.label :car_number, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.text_field :car_number, class: 'form-control only-capital' %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :semitrailer_number, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.text_field :semitrailer_number, class: 'form-control only-capital' %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :expiration_from, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.date_select :expiration_from, { use_month_numbers: true }  , class: 'form-control date-picker' %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :indefinite, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.select :indefinite, options_for_indefinite, {}, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :expiration_to, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.date_select :expiration_to, { use_month_numbers: true, include_blank: true }, class: 'form-control date-picker' %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :product_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.select :product_id, options_for_products, {}, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :driver_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.select :driver_id, options_for_drivers, {include_blank: t('activerecord.models.driver')}, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :active, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.select :active, options_for_active, {}, class: 'form-control' %>
      </div>
    </div>

    <% if admin? %>
      <div class="form-group control-group">
        <%= form.label :client_id, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10 controls">
          <%= form.select :client_id, options_for_clients, {}, class: 'form-control' %>
        </div>
      </div>
    <% end %>

    <% if super_admin? %>
      <div class="form-group control-group">
        <%= form.label :hidden, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10 controls">
          <%= form.select :hidden, options_for_hidden, {}, class: 'form-control' %>
        </div>
      </div>

      <%= hidden_field_tag :'notify[hidden_at]', notify.hidden_at %>

      <div class="form-group control-group">
        <%= form.label :company_id, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10 controls">
          <%= form.select :company_id, options_for_companies, {}, class: 'form-control' %>
        </div>
      </div>
    <% end %>

    <div class="form-group control-group">
      <div class='col-sm-2'>
      </div>
      <div class='col-sm-8'>
        <%= form.button :submit, class: 'btn btn-primary btn-save' do %>
          <%= fa_icon('check', text: t('common.save')) %>
        <% end %>

        <%= link_to fa_icon('times', text: t('common.cancel')), notifies_path, class: 'btn btn-secondary' %>
      </div>
    </div>

    <br>
    <br>
  </div>
<% end %>
