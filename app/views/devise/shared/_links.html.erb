<%- if controller_name != 'sessions' %>
  <%= link_to t('devise.login'), new_session_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('devise.forgot_your_password'), new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('devise.didnt_receive_unlock_instructions'), new_unlock_path(resource_name) %><br />
<% end -%>
