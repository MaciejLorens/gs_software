<%= form_with(model: product, local: true, class: 'form-horizontal denser') do |form| %>

  <div class="fieldset">
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this
          product from being saved:</h2>

        <ul>
          <% product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group control-group">
      <%= form.label :name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.text_field :name, class: 'form-control' %>
        <span class="help-block">Required</span>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :number, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.text_field :number, class: 'form-control' %>
        <span class="help-block">Required</span>
      </div>
    </div>

    <div class="form-group control-group">
      <div class='col-sm-2'></div>
      <div class='col-sm-8'>
        <%= form.button :submit, class: 'btn btn-primary btn-save' do %>
          <%= fa_icon('check', text: 'Save') %>
        <% end %>

        <%= link_to fa_icon('times', text: 'Cancel'), products_path, class: 'btn btn-secondary' %>
      </div>
    </div>

  </div>
<% end %>
