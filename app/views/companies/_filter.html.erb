<div class='well'>

  <%= form_tag(companies_path, method: :get, class: 'filter-form') do %>

    <div class="filter-field form-inline">

      <%= hidden_field_tag :s_field, params[:s_field] %>
      <%= hidden_field_tag :s_order, params[:s_order] %>

      <%= text_field_tag :f_name,
                         params[:f_name],
                         placeholder: t('activerecord.attributes.company.name'),
                         class: 'form-control filter' %>

      <%= text_field_tag :f_address,
                         params[:f_address],
                         placeholder: t('activerecord.attributes.company.address'),
                         class: 'form-control filter' %>

      <%= text_field_tag :f_postcode,
                         params[:f_postcode],
                         placeholder: t('activerecord.attributes.company.postcode'),
                         class: 'form-control filter' %>

      <%= text_field_tag :f_city,
                         params[:f_city],
                         placeholder: t('activerecord.attributes.company.city'),
                         class: 'form-control filter' %>

      <%= text_field_tag :f_country,
                         params[:f_country],
                         placeholder: t('activerecord.attributes.company.country'),
                         class: 'form-control filter' %>

      <%= link_to fa_icon('times'), companies_path(s_field: :created_at, s_order: :desc), class: 'btn btn-info pull-right' %>

      <%= button_tag :submit, class: 'btn btn-primary pull-right' do %>
        <%= fa_icon('retweet', text: t('common.refresh')) %>
      <% end %>

    </div>

  <% end %>

</div>
