<div class='well'>

  <%= form_tag(companies_path, method: :get) do %>

    <div class="filter-field form-inline">

      <%= text_field_tag :f_name,
                         params[:f_name],
                         placeholder: 'All Names',
                         class: 'form-control filter' %>

      <%= text_field_tag :f_address,
                         params[:f_address],
                         placeholder: 'All Addresses',
                         class: 'form-control filter' %>

      <%= text_field_tag :f_postcode,
                         params[:f_postcode],
                         placeholder: 'All postcodes',
                         class: 'form-control filter' %>

      <%= text_field_tag :f_city,
                         params[:f_city],
                         placeholder: 'All Cities',
                         class: 'form-control filter' %>

      <%= text_field_tag :f_country,
                         params[:f_country],
                         placeholder: 'All Countries',
                         class: 'form-control filter' %>

      <%= link_to fa_icon('times'), companies_path, class: 'btn btn-info pull-right' %>

      <%= button_tag :submit, class: 'btn btn-primary pull-right' do %>
        <%= fa_icon('retweet', text: 'Refresh') %>
      <% end %>

    </div>

  <% end %>

</div>
