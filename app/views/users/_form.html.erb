<% url = edit_action? ? user_path(user) : create_user_users_path %>

<%= form_with(model: user, url: url, class: 'form-horizontal denser') do |form| %>

  <div class="fieldset">
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this
          user from being saved:</h2>

        <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group control-group">
      <%= form.label :email, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.text_field :email, class: 'form-control' %>
        <span class="help-block">Required</span>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :first_name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.text_field :first_name, class: 'form-control' %>
        <span class="help-block">Required</span>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :last_name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.text_field :last_name, class: 'form-control' %>
        <span class="help-block">Required</span>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :password, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.password_field :password, autocomplete: 'new-password', class: 'form-control' %>
        <span class="help-block"><%= @minimum_password_length %> characters minimum</span>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :password_confirmation, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
        <span class="help-block">Required</span>
      </div>
    </div>

    <div class="form-group control-group">
      <div class='col-sm-2'></div>
      <div class='col-sm-8'>
        <%= form.button :submit, class: 'btn btn-primary btn-save' do %>
          <%= fa_icon('check', text: 'Save') %>
        <% end %>

        <%= link_to fa_icon('times', text: 'Cancel'), users_path, class: 'btn btn-secondary' %>
      </div>
    </div>

  </div>

<% end %>
