<div class="page-header">
  <h1>View Receipt</h1>
</div>

<%= render partial: 'nav_tabs' %>

<div class="form-horizontal denser fieldset">

  <div class="form-group control-group">
    <%= label_tag :number, 'Number:', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10 controls">
      <%= text_field_tag :number, @receipt.number, class: 'form-control', readonly: true %>
    </div>
  </div>

  <div class="form-group control-group">
    <%= label_tag :car_number, 'Car number:', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10 controls">
      <%= text_field_tag :car_number, @receipt.car_number, class: 'form-control', readonly: true %>
    </div>
  </div>

  <div class="form-group control-group">
    <%= label_tag :semitrailer_number, 'Semitrailer number:', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10 controls">
      <%= text_field_tag :semitrailer_number, @receipt.semitrailer_number, class: 'form-control', readonly: true %>
    </div>
  </div>

  <div class="form-group control-group">
    <%= label_tag :expiration_from, 'Expiration from:', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10 controls">
      <%= text_field_tag :expiration_from, @receipt.expiration_from, class: 'form-control', readonly: true %>
    </div>
  </div>

  <div class="form-group control-group">
    <%= label_tag :expiration_to, 'Expiration to:', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10 controls">
      <%= text_field_tag :expiration_to, @receipt.expiration_to, class: 'form-control', readonly: true %>
    </div>
  </div>

  <div class="form-group control-group">
    <%= label_tag :product, 'Product:', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10 controls">
      <%= text_field_tag :product, @receipt.product.name, class: 'form-control', readonly: true %>
    </div>
  </div>

  <div class="form-group control-group">
    <%= label_tag :driver, 'Driver:', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10 controls">
      <%= text_field_tag :driver, @receipt.driver.full_name, class: 'form-control', readonly: true %>
    </div>
  </div>

</div>
