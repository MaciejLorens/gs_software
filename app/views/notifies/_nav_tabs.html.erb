<ul class='nav nav-tabs'>

  <li class="icon index_collection_link <%= index_active? %>">
    <%= link_to fa_icon('th-list', text: t('notify.navbar.list')), notifies_path %>
  </li>

  <li class="icon new_collection_link <%= new_active? %>">
    <%= link_to fa_icon('plus', text: t('notify.navbar.add_new')), new_notify_path %>
  </li>

  <% if show_action? %>
    <li class="icon new_collection_link <%= show_active? %>">
      <%= link_to fa_icon('eye', text: t('common.view')), '#' %>
    </li>
  <% end %>

  <% if edit_action? %>
    <li class="icon new_collection_link <%= edit_active? %>">
      <%= link_to fa_icon('pencil', text: t('common.edit')), '#' %>
    </li>
  <% end %>

  <% if index_action? %>

    <li class="dropdown right">
      <%= link_to t('notify.navbar.selected_items'), '#', class: 'dropdown-toggle', :'data-toggle' => 'dropdown' %>
      <ul class="dropdown-menu dropdown-menu-right">
        <li>
          <%= link_to t('notify.navbar.deleted_items'), batch_destroy_notifies_path, class: 'batch-destroy' %>
        </li>
      </ul>
    </li>

  <% end %>

  <% if show_action? %>
    <li class='right'>
      <%= link_to t('notify.navbar.print'), '#', onclick: 'window.print()' %>
    </li>
    <li class='right'>
      <%= link_to t('notify.navbar.pdf'), generate_pdf_notify_path(@notify) %>
    </li>
  <% end %>

</ul>
