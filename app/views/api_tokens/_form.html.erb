<%= form_with(model: api_token, local: true, class: 'form-horizontal denser') do |form| %>

  <div class="fieldset">

    <% if api_token.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(api_token.errors.count, "error") %>
          <%= t('api_token.errors.prohibited') %>
        </h2>

        <ul>
          <% api_token.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <% if super_admin? %>

      <div class="form-group control-group">
        <%= form.label :value, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10 controls">
          <%= form.text_field :value, required: true, class: 'form-control api-token' %>
        </div>
      </div>

    <% end %>

    <div class="form-group control-group">
      <div class='col-sm-2'>
      </div>
      <div class='col-sm-8'>
        <%= form.button :submit, class: 'btn btn-primary btn-save' do %>
          <%= fa_icon('retweet', text: t('common.refresh')) %>
        <% end %>
      </div>
    </div>

  </div>

<% end %>
