<div class='well'>

  <%= form_tag(drivers_path, method: :get) do %>

    <div class="filter-field form-inline">

      <%= text_field_tag :f_first_name,
                         params[:f_first_name],
                         placeholder: 'All First Names',
                         class: 'form-control filter' %>

      <%= text_field_tag :f_last_name,
                         params[:f_last_name],
                         placeholder: 'All Last Names',
                         class: 'form-control filter' %>

      <%= link_to fa_icon('times'), drivers_path, class: 'btn btn-info pull-right' %>

      <%= button_tag :submit, class: 'btn btn-primary pull-right' do %>
        <%= fa_icon('retweet', text: 'Refresh') %>
      <% end %>

    </div>

  <% end %>

</div>
