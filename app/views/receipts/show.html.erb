<div class="page-header">
  <h1>View Receipt <%= @receipt.number %></h1>
</div>

<%= render partial: 'nav_tabs' %>

<form class="form-horizontal denser fieldset col-sm-5 show-action">

  <div class="form-group control-group">
    <%= label_tag :number, 'Number:', class: 'col-sm-4 control-label' %>
    <div class="col-sm-8 controls">
      <%= text_field_tag :number, @receipt.number, class: 'form-control', readonly: true %>
    </div>
  </div>

  <div class="form-group control-group">
    <%= label_tag :car_number, 'Car number:', class: 'col-sm-4 control-label' %>
    <div class="col-sm-8 controls">
      <%= text_field_tag :car_number, @receipt.car_number, class: 'form-control', readonly: true %>
    </div>
  </div>

  <div class="form-group control-group">
    <%= label_tag :semitrailer_number, 'Semitrailer number:', class: 'col-sm-4 control-label' %>
    <div class="col-sm-8 controls">
      <%= text_field_tag :semitrailer_number, @receipt.semitrailer_number, class: 'form-control', readonly: true %>
    </div>
  </div>

  <div class="form-group control-group">
    <%= label_tag :expiration_from, 'Expiration from:', class: 'col-sm-4 control-label' %>
    <div class="col-sm-8 controls">
      <%= text_field_tag :expiration_from, @receipt.expiration_from, class: 'form-control', readonly: true %>
    </div>
  </div>

  <div class="form-group control-group">
    <%= label_tag :expiration_to, 'Expiration to:', class: 'col-sm-4 control-label' %>
    <div class="col-sm-8 controls">
      <%= text_field_tag :expiration_to, @receipt.expiration_to, class: 'form-control', readonly: true %>
    </div>
  </div>

  <div class="form-group control-group">
    <%= label_tag :product, 'Product:', class: 'col-sm-4 control-label' %>
    <div class="col-sm-8 controls">
      <%= text_field_tag :product, @receipt.product.name, class: 'form-control', readonly: true %>
    </div>
  </div>

  <div class="form-group control-group">
    <%= label_tag :driver, 'Driver:', class: 'col-sm-4 control-label' %>
    <div class="col-sm-8 controls">
      <%= text_field_tag :driver, @receipt.driver.full_name, class: 'form-control', readonly: true %>
    </div>
  </div>


</form>

<div class="col-sm-5 without-padding qr-code">
  <% qrcode = RQRCode::QRCode.new(@receipt.qr_code_string) %>
  <%= raw qrcode.as_html %>
</div>
